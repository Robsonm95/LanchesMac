@model Lanche

<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImagemUrl" class="img-rounded" alt="@Model.Nome" width="225" height="225" />
        <div class="caption">
            <h3 class="pull-right">@Model.Preco.ToString("c")</h3>
            <h3>
                @Model.Nome
            </h3>
            <p>@Model.DescricaoCurta</p>
            <p>
                <a href="#" class="btn btn-primary" role="button"> Incluir no Carrinho</a> 
            </p>
        </div>
    </div>
</div>
